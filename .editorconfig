root = true;

[*]
indent_style = tab
indent_size = 2
tab_width = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js, css, html}]
charset = utf-8

[*.{json, yml}]
indent_style = space
indent_size = 2

[.*]
indent_style = space
indent_size = 2

[README.md]
trim_trailing_whitespace = ignore
